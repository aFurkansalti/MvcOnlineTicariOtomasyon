@using MvcOnlineTicariOtomasyon.Models.Siniflar

@model List<Personel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered my-4">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Soyadı</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var personel in Model)
    {
        <tr>
            <td>@personel.PersonelId</td>
            <td>@personel.PersonelAd</td>
            <td>@personel.PersonelSoyad</td>
            <td>@personel.PersonelGorsel</td>
            <td>@personel.Departman.DepartmanAd</td>
            <td><a href="/Personel/PersonelGetir/@personel.PersonelId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@personel.PersonelId" class="btn btn-default" style="background-color: cornflowerblue">Satışlar</a></td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle/" class="btn btn-info">Yeni Personel Ekle</a>

