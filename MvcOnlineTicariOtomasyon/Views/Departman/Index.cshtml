@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<table class="table table-bordered">
    <tr>
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var departman in Model)
    {
        <tr>
            <td>@departman.DepartmanAd</td>
            <td><a href="/Departman/DepartmanSil/@departman.DepartmanId" class="btn btn-danger" onclick="return confirm('Departman listeden kaldırılacaktır!')">Sil</a></td>
            <td><a href="/Departman/DepartmanGetir/@departman.DepartmanId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departman/DepartmanDetay/@departman.DepartmanId" class="btn btn-default" style="background-color: lightgray">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Departman/DepartmanEkle" class="btn btn-primary">Departman Ekle</a>

