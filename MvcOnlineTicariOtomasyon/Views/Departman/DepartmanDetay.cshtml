@using MvcOnlineTicariOtomasyon.Models.Siniflar

@model List<Personel>

@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="my-4">Departman Detay Sayfası</h2>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.departmanName</li>
</ol>
<br />
<table class="table table-hover">
    <tr>
        <th>Personel ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Gorsel</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var personel in Model)
    {
        <tr>
            <td>@personel.PersonelId</td>
            <td>@personel.PersonelAd</td>
            <td>@personel.PersonelSoyad</td>
            <td>@personel.PersonelGorsel</td>
            <td><a href="/Departman/DepartmanPersonelSatis/@personel.PersonelId" class="btn btn-default" style="background-color: orangered">Satışlar</a></td>
        </tr>
    }
</table>

