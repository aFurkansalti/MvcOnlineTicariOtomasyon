@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Kategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered mt-4">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var kategori in Model)
    {
        <tr>
            <td>@kategori.KategoriId</td>
            <td>@kategori.KategoriAd</td>
            <td><a href="/Kategori/KategoriSil/@kategori.KategoriId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@kategori.KategoriId" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Kategori/KategoriEkle" class="btn btn-primary">Yeni Kategori</a>
