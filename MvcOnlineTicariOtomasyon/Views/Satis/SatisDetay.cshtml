@using MvcOnlineTicariOtomasyon.Models.Siniflar

@model List<SatisHareket>

@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="my-4">Satış Detayı</h2>

<table class="table table-bordered">
    <tr>
        <th>Satış ID</th>
        <th>Tarih</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Ürün</th>
    </tr>
    @foreach (var satis in Model)
    {
        <tr>
            <td>@satis.SatisId</td>
            <td>@satis.Tarih</td>
            <td>@satis.Adet</td>
            <td>@satis.Fiyat</td>
            <td>@satis.ToplamTutar</td>
            <td>@satis.Cariler.CariAd @satis.Cariler.CariSoyad</td>
            <td>@satis.Personel.PersonelAd @satis.Personel.PersonelSoyad</td>
            <td>@satis.Urun.UrunAd</td>
        </tr>
    }
</table>
<button class="btn btn-default" style="background-color:cornflowerblue">Yazdır</button>



