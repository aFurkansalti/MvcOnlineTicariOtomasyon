@using MvcOnlineTicariOtomasyon.Models.Siniflar

@model List<SatisHareket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Satış Id</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Fiyat</th>
            <th>Adet</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var satis in Model)
    {
        <tr>
            <td>@satis.SatisId</td>
            <td>@satis.Urun.UrunAd</td>
            <td>@satis.Cariler.CariAd @satis.Cariler.CariSoyad</td>
            <td>@satis.Personel.PersonelAd @satis.Personel.PersonelSoyad</td>
            <td>@satis.Fiyat</td>
            <td>@satis.Adet</td>
            <td>@satis.ToplamTutar</td>
            <td>@satis.Tarih</td>
            <td><a href="/Satis/SatisGetir/@satis.SatisId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@satis.SatisId" class="btn btn-secondary">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Satis/YeniSatis/" class="btn btn-info">Yeni Satış Yap</a>

