@using MvcOnlineTicariOtomasyon.Models.Siniflar.Group_By

@model List<SinifGroupUrunbyMarka>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Markalara Göre Ürün Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Adet</th>
                </tr>
            </thead>
            <tbody>
                @{ int num = 0; }
                @foreach (var item in Model)
                {
                    num++;
                    string progressBar = Convert.ToString(item.Sayi * 10) + "%";   
                    <tr>
                        <td>@num.</td>
                        <td>@item.Marka</td>

                        @switch (item.Sayi)
                        {
                            case int n when (n == 1 || n == 2):
                                <td>
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-danger" style="width: @progressBar"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-danger">@item.Sayi</span></td>
                                break;
                            case int n when (n > 2 && n <= 5):
                                <td>
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-warning" style="width: @progressBar"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-warning">@item.Sayi</span></td>
                                break;
                            case int n when (n > 5 && n < 10):
                                <td>
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-info" style="width: @progressBar"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-info">@item.Sayi</span></td>
                                break;
                            default:
                                <td>
                                    <div class="progress progress-xs">
                                        <div class="progress-bar bg-info" style="width: @progressBar"></div>
                                    </div>
                                </td>
                                <td><span class="badge bg-info">@item.Sayi</span></td>
                                break;
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
